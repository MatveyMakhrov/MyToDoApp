<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Устанавливаем белый фон -->
        <item name="android:background">@android:color/white</item>
        <!-- Устанавливаем цвет текста (например, черный) -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <!-- Стили для кнопок -->
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomNegativeButton</item>
    </style>

    <style name="CustomDatePicker">
        <item name="android:background">@color/blue</item> <!-- Цвет фона шапки -->
        <item name="android:textColor">@color/white</item> <!-- Цвет текста в шапке -->
    </style>

    <!-- Стиль для кнопки "ОК" -->
    <style name="CustomPositiveButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue</item> <!-- Белый текст -->
    </style>

    <!-- Стиль для кнопки "Отмена" -->
    <style name="CustomNegativeButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue</item>

        <!-- Изменение цвета фона для выбранного дня -->
        <item name="android:colorAccent">@color/blue</item>
    </style>




    <style name="CalendarHeaderStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CalendarDateStyle">
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>