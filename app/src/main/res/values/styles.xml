<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- setting the white background -->
        <item name="android:background">@android:color/white</item>
        <!-- setting the text color -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <!-- styles for buttons -->
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomNegativeButton</item>
    </style>

    <style name="CustomDatePicker">
        <item name="android:background">@color/blue</item> <!-- header background color -->
        <item name="android:textColor">@color/white</item> <!-- color of the text in the header -->
    </style>

    <!-- style for the "OK" button -->
    <style name="CustomPositiveButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue</item> <!-- white text -->
    </style>

    <!-- style for the Cancel button -->
    <style name="CustomNegativeButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue</item>

        <!-- changing the background color for the selected day -->
        <item name="android:colorAccent">@color/blue</item>
    </style>




    <style name="CalendarHeaderStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CalendarDateStyle">
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>